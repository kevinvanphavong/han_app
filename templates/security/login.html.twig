{% extends 'layout.html.twig' %}

{% block title %}Log in - Han app{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard_index') }}
{% endblock %}

{% block navbar %}
{% endblock navbar %}

{% block body %}
    <style>
        body {
            height: 100vh;
            padding: 0;
        }
        .login-form__wrapper {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .login-form__form {
            width: 50%;
            margin: auto 0;
            max-width: 600px;
        }
        .login-form__content {
            background-color: #fff;
            display: flex;
            flex-direction: column;
            grid-gap: 1em;
            padding: 2em;
            border: 1px solid #a9a9a9;
            border-radius: 5px;
            box-shadow: 2px 2px 10px lightgray;
        }

        .login-form__form-email-input,
        .login-form__form-password-input,
        .login-form__form-submit-button {
            padding: 0.5em;
            border-radius: 5px;
            border: 1px solid #a9a9a9;
        }

        .login-form__form-submit-button {
            cursor: pointer;
        }
    </style>

    <div class="login-form__wrapper">
        <form method="post" class="login-form__form">
            <div class="login-form__content">
                <label for="inputEmail">Email</label>
                <input type="email" class="login-form__form-email-input" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" class="login-form__form-password-input" name="password" id="inputPassword" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="login-form__form-submit-button">Sign in</button>
            </div>
        </form>
    </div>
{% endblock %}
