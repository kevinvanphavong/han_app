<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Han app{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('appJS') }}
        {% endblock %}
    </head>

    {% block navbar %}{% endblock navbar %}

    <body>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }} flash-message--active">
                    <div class="flash-content">
                        {% if label is same as 'success' %}
                            <i class="fa-solid fa-circle-check"></i>
                        {% elseif label is same as 'error' %}
                            <i class="fa-solid fa-circle-exclamation"></i>
                        {% endif %}
                            <span>{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
    <script src="https://kit.fontawesome.com/02208eaf76.js" crossorigin="anonymous"></script>
</html>
