<div class="budget-view__header">
    <h2>ðŸ’° List of budgets</h2>
    <a href="{{ path('creation_form_page') }}#budget-form" class="button-action button-action-add">Add new budget</a>
</div>
<div class="budget-view">
    <table class="budget-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th class="budget-table-actions">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if budgets|length > 0 %}
            {% for budget in budgets %}
                {% set isSalary = budget.isSalary %}
                <tr data-is-salary="{{ isSalary is same as (true) }}">
                    <td>{{ budget.name }}</td>
                    <td>{{ (budget.amount ?? 0) ~ 'â‚¬' }}</td>
                    <td class="budget-table-actions">
                        <a class="budget-table-actions__link budget-table-actions__link-edit" href="{{ path('budget_edit_action', {'id': budget.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="budget-table-actions__link budget-table-actions__link-delete" href="{{ path('budget_delete_action', {'id': budget.id}) }}"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="3">{{ 'There are no budgets set for your expenses - Create a new budget first' }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>
